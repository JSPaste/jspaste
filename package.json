{
  "name": "jspaste",
  "version": "0.0.0",
  "description": "The official library to interact with JSPaste API",
  "keywords": [
    "hastebin",
    "jspaste",
    "paste",
    "pastebin",
    "tnfangel"
  ],
  "homepage": "https://jspaste.tnfangel.xyz",
  "bugs": {
    "url": "https://github.com/jspaste/jspaste/issues"
  },
  "repository": "github:jspaste/jspaste",
  "license": "MIT",
  "author": "tnfAngel",
  "contributors": [
    "Aidak",
    "Ivan Gabaldon <git[at]inetol.net>"
  ],
  "type": "module",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build lib/index.ts --outdir dist --target node --minify && bun run build:declarations",
    "build:declarations": "tsc",
    "prepublishOnly": "bun run test && bun run test:node && bun run build",
    "test": "ts-standard --fix && bun test --timeout=5000 --coverage",
    "test:node": "ts-standard --fix && cross-env NODE_OPTIONS=--experimental-vm-modules jest --no-cache"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "lib/**/*.ts"
    ],
    "coverageDirectory": "__coverage__",
    "coverageReporters": [
      "json"
    ],
    "errorOnDeprecated": true,
    "preset": "ts-jest",
    "roots": [
      "<rootDir>/__tests__/"
    ],
    "testMatch": [
      "**/__tests__/**/*.jest.[jt]s"
    ],
    "testTimeout": 5000
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "bun-types": "*",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-standard": "*",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "undici": "^5.25.2"
  },
  "peerDependenciesMeta": {
    "undici": {
      "optional": true
    }
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=16.11.0"
  },
  "ts-standard": {
    "project": "tsconfig.json",
    "ignore": [
      "__coverage__",
      "dist"
    ]
  }
}