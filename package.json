{
  "name": "jspaste",
  "version": "0.0.0",
  "description": "The official library to interact with JSPaste API",
  "keywords": [
    "hastebin",
    "jspaste",
    "paste",
    "pastebin",
    "tnfangel"
  ],
  "homepage": "https://jspaste.tnfangel.xyz",
  "bugs": {
    "url": "https://github.com/jspaste/jspaste/issues"
  },
  "repository": "jspaste/jspaste",
  "license": "MIT",
  "author": "tnfAngel",
  "contributors": [
    "Aidak",
    "Ivan Gabaldon <git[at]inetol.net>"
  ],
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.cts",
  "directories": {
    "lib": "src",
    "test": "__tests__"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && esbuild --bundle --minify --platform=node --outfile=./dist/index.cjs ./src/index.ts && esbuild --bundle --minify --platform=neutral --outfile=./dist/index.js ./src/index.ts",
    "lint": "ts-standard --fix",
    "prepack": "bun run build",
    "test": "bun run lint && bun test",
    "test:node": "bun run lint && NODE_OPTIONS=--experimental-vm-modules npm exec jest"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "bun-types": "*",
    "esbuild": "^0.19.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-standard": "*",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "engineStrict": true,
  "ts-standard": {
    "ignore": [
      "./__coverage__",
      "./dist/**/*.js",
      "./dist/**/*.cjs",
      "./dist/**/*.mjs"
    ],
    "project": "./tsconfig.json"
  }
}
