{
  "compilerOptions": {
    "lib": [
      "ES2022"
    ],
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "moduleDetection": "force",

    "allowImportingTsExtensions": true,
    "allowJs": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "stripInternal": true,
    "types": [
      "bun-types"
    ]
  },
  "include": [
    "__tests__/**/*.ts",
    "src/**/*.ts"
  ]
}
